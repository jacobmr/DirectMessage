# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-username
SMTP_PASSWORD=your-password
SMTP_USE_TLS=true

# Certificate Paths
CERT_DIR=certs
LOG_DIR=logs

# Sender Information
SENDER_EMAIL=sender@direct.example.com
SENDER_CERT_PATH=certs/sender_at_direct_example_com.crt
SENDER_KEY_PATH=certs/private/sender_at_direct_example_com.key

# Recipient Information (for testing)
RECIPIENT_EMAIL=recipient@direct.example.com
RECIPIENT_CERT_PATH=certs/recipient_at_direct_example_com.crt
